{
  "name": "nklient",
  "version": "1.0.0",
  "description": "Modern, feature-rich HTTP request client for Node.js with HTTPS, cookies, retry logic, and more",
  "main": "dist/index.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "mocha ./tests/ --timeout 15000 --reporter spec",
    "test:watch": "mocha ./tests/ --timeout 15000 --reporter spec --watch",
    "test:coverage": "nyc --reporter=html --reporter=text --reporter=lcov mocha ./tests/ --timeout 15000",
    "test:ci": "nyc --reporter=lcov mocha ./tests/ --timeout 15000 --reporter spec",
    "test:memory": "NODE_OPTIONS=\"--expose-gc --max-old-space-size=512\" mocha ./tests/memory-leaks.test.js --timeout 60000",
    "test:oom": "NODE_OPTIONS=\"--expose-gc --max-old-space-size=512\" npm test",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "build": "bun build ./index.js ./config/ConfigLoader.js --outdir ./dist --target node --format cjs --external ajv --external ajv-formats && cp -r config dist/",
    "build:minify": "bun build ./index.js ./config/ConfigLoader.js --outdir ./dist --target node --format cjs --minify --external ajv --external ajv-formats && cp -r config dist/",
    "prebuild": "rm -rf dist",
    "prepublishOnly": "npm run build:minify && npm run lint && npm test",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "postversion": "git push && git push --tags",
    "prepare-release": "node scripts/prepare-release.js"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nitishagar/nklient.git"
  },
  "keywords": [
    "http",
    "https",
    "http2",
    "client",
    "request",
    "rest",
    "api",
    "promise",
    "async",
    "cookies",
    "proxy",
    "retry",
    "interceptors",
    "stream"
  ],
  "author": "nitishagar",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/nitishagar/nklient/issues"
  },
  "homepage": "https://github.com/nitishagar/nklient#readme",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "http-proxy-agent": "^7.0.0",
    "https-proxy-agent": "^7.0.2",
    "tough-cookie": "^4.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "chai": "^4.3.10",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.2.0",
    "nock": "^13.4.0",
    "nyc": "^15.1.0",
    "prettier": "^3.1.1",
    "sinon": "^17.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist/",
    "index.d.ts",
    "LICENSE",
    "README.md"
  ]
}
